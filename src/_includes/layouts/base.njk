<!doctype html>
<html {% if theme %}theme="{{ theme }}"{% endif %} lang="en">
<head>

  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-8606805-7"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-8606805-7');
  </script>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Zero-to-one projects, design systems, accessibility, growing design teams, and solving gnarly problems.">
	<meta name="theme-color" content="#010101">
  
	<title>{% if title %}{{ title }}{% endif %}</title>
  
  <!--[if IE]><link rel="shortcut icon" href="/_assets/img/favicon.ico"><![endif]-->
  <link rel="apple-touch-icon" href="/_assets/img/favicon__180x180.png">
  <link rel="icon" href="/_assets/img/favicon__192x192.png">
  <link rel="stylesheet" href="/_assets/css/styles.css" />
  {% include "meta.njk" %}
</head>

<body>
  {% if tags.includes("protected") %}

<script>
    function checkPassword() {
      const password = document.getElementById("password").value;
      const correctPassword = "nicetomeetyou"; // Set securely
      if (password === correctPassword) {
        document.getElementById("passwordModal").style.display = "none";
      } else {
        alert("Bummer. That doesn't look quite right, please try again.");
      }
    }
  </script>
  <div id="passwordModal" class="form-wrapper">
    <div class="form">
      
      <h2>Password required to view</h2>
      <p>As a courtesy to {{ company }}, I've hidden this content behind a password. If you need access please <a title="Content Mike via Email" href="mailto:mikerst@gmail.com">let me know</a>, otherwise, exit <a href="/">back to home</a>.</p>
      <label for="password">Enter password to view:</label>
      <input type="password" id="password" />
      <button tabindex="0" type="button" onclick="checkPassword()">Submit password</button>
      
    </div>
  </div>
{% endif %}

  {% include "header.njk" %}

  <main {% if layoutClass %}class="{{ layoutClass }}"{% endif %}>

  {{ content | safe }}

  </main>
  
  {% include "footer.njk" %}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js"></script>

  {% set js %}
    {% include "js/core.js" %}
    {% include "js/home.js" %}
  {% endset %}
  <script>
    {{ js | jsmin | safe }}
  </script>

</body>

</html>