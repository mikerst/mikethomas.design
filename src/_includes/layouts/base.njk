<!doctype html>
<html {% if theme %}theme="{{ theme }}"{% endif %} lang="en">
<head>

  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-8606805-7"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-8606805-7');
  </script>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Zero-to-one projects, design systems, accessibility, growing design teams, and solving gnarly problems.">
	<meta name="theme-color" content="#010101">
  
	<title>{% if title %}{{ title }}{% endif %}</title>
  
  <link rel="apple-touch-icon" sizes="180x180" href="/_assets/img/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/_assets/img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/_assets/img/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  

  <link rel="stylesheet" href="/_assets/css/styles.css" />
  {% include "meta.njk" %}
</head>

<body>

  {% if environment == "prod" %}
    {% include "password.njk" %}
  {% endif %}

  {% include "header.njk" %}

  <main {% if layoutClass %}class="{{ layoutClass }}"{% endif %}>

  {{ content | safe }}

  </main>
  
  {% include "footer.njk" %}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js"></script>

  {% set js %}
    {% include "js/core.js" %}
    {% include "js/home.js" %}
  {% endset %}
  <script>
    {{ js | jsmin | safe }}
  </script>

</body>

</html>